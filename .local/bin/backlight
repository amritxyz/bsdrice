#!/bin/sh

current_brightness=$(wsconsctl display.brightness | sed 's/[^0-9]*\([0-9]*\).*/\1/')

if [ "$1" = "inc" ]; then
    new_brightness=$((current_brightness + 5))
        wsconsctl display.brightness=$new_brightness
elif [ "$1" = "dec" ]; then
    new_brightness=$((current_brightness - 5))
        wsconsctl display.brightness=$new_brightness
else
    echo "Usage: backlight {inc|dec}"
fi
